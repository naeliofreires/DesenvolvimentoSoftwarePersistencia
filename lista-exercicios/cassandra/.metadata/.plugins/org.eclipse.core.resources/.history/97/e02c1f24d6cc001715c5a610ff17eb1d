package com.exemplo.cassandra;

import com.datastax.driver.core.Cluster;
import com.datastax.driver.core.Host;
import com.datastax.driver.core.Metadata;

public class SimpleClient {

	private Cluster cluster;
	
	public void connect(String node) { 
		// Conexão com Cluster     
		cluster = Cluster.builder().addContactPoint(node).build();
		// Obtenção de metadados
		Metadata metadata = cluster.getMetadata(); 
		System.out.printf("Connected to cluster: %s\n", metadata.getClusterName());     for ( Host host : metadata.getAllHosts() ) { System.out.printf("Datatacenter: %s; Host: %s; Rack: %s\n",  host.getDatacenter(), host.getAddress(), host.getRack());     }   }
	}
}
